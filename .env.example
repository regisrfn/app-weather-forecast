// Variáveis de ambiente para o projeto

// URL da API backend
// Desenvolvimento local: http://localhost:3000/api
// Produção: https://api.weather.seudominio.com.br/api
VITE_API_URL=http://localhost:3000/api

// Habilitar modo de desenvolvimento com dados mockados
// true = usa dados mockados, false = conecta ao backend real
VITE_USE_MOCK_DATA=true

// Intervalo de atualização dos dados (em milissegundos)
// Padrão: 300000 (5 minutos)
VITE_UPDATE_INTERVAL=300000

// OpenWeatherMap API Key (opcional, se implementar no frontend)
# VITE_OPENWEATHER_API_KEY=your_key_here

// Configurações do mapa
VITE_MAP_DEFAULT_ZOOM=10
VITE_MAP_MIN_ZOOM=8
VITE_MAP_MAX_ZOOM=15

# Cidade focal (Ribeirão do Sul)
VITE_FOCAL_CITY_LAT=-22.7572
VITE_FOCAL_CITY_LON=-49.9439
VITE_FOCAL_CITY_ID=3543204
