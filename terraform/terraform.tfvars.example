# Variáveis de ambiente de exemplo
# Copie este arquivo para terraform.tfvars e ajuste conforme necessário

# Ambiente
environment  = "production"
project_name = "weather-forecast"
aws_region   = "sa-east-1"  # São Paulo, Brasil

# CloudFront
price_class = "PriceClass_100"  # Apenas US, Canadá e Europa
enable_ipv6 = true

# Cache (em segundos)
min_ttl     = 0
default_ttl = 3600   # 1 hora
max_ttl     = 86400  # 1 dia

# ======================================
# DOMÍNIO CUSTOMIZADO (OPCIONAL)
# ======================================
# Descomente as linhas abaixo se tiver um domínio próprio

# enable_custom_domain = true
# domain_name          = "weather.seudominio.com"

# NOTA: Você precisa ter:
# 1. Domínio registrado
# 2. Zona Route53 criada para o domínio
# 3. Nameservers do domínio apontando para Route53
